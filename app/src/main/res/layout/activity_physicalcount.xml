            android:layout_weight="0.3"
            android:visibility="gone"
            android:text="EDIT"
            android:textColor="#000000"
            android:textSize="@dimen/textsize" />
        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="0.3"
            android:text="Save"
            android:textColor="#000000"
            android:textSize="@dimen/textsize" />


